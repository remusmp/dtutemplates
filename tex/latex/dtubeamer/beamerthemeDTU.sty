% Command used from frame DTU logo (headline)
\newcommand{\insertFrameDTULogo}
{
	\vspace{\dimDTULogoYOffset}
	\hbox{
		% The DTU Logo
		\begin{beamercolorbox}[wd=0.99\paperwidth,left]{logo in head/foot}
			\hspace{\dimDTULogoXOffset}\insertDTULogo
		\end{beamercolorbox}
	}
}
